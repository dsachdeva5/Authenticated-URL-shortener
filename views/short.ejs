<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <title>Document</title>
</head>
<body class="bg-light text-dark">
  <div class="container" >

    <h1 class="mt-4 text-center">URL SHORTENER</h1>
     <form action="/url" method="post" class="my-4 form-inline" >
         <label for="fullUrl" class="sr-only"></label>
         <input required type="url" name="fullUrl" placeholder="URL"class="form-control col  mr-2">
         <button class="btn btn-success" type="submit" name="ok">Shrink</button>
         <a class="btn btn-light" href="/logout" role="button">Log Out</a>
     </form>


     <table class="table table-striped table-responsive ">
         <thead>
            <% if(shorturl.length>0) { %>
             <tr>
                 <th>Full Url</th>
                 <th>Short Url</th>
                 <th>Clicks</th>
                
             </tr>
             <% } %>
         </thead>
         <tbody>
            <% Array.from(shorturl).forEach(function(urls){  %>
             <tr >
                 <td>
                     <a href="<%=urls.full %>"> <%=urls.full %></a>
                 </td>
                 <td><a  href="<%=urls.short %>" > <%= process.env.APP_BASE_URL %>/<%=urls.short%></a></td>
                 <td><%=urls.click%></td>
                 
                 <td> <button   onclick="copy('<%= process.env.APP_BASE_URL %>/<%=urls.short%>')" type="button" class="btn btn-outline-dark"><i class="fa fa-copy"></i></button></td>
              

                 <form action="/delete" method="post">
                 <td><button type="submit" value="<%=urls.id %>" name="clear" class="btn btn-danger "><i class="fa fa-trash"></i></button></td>
                </form>
             </tr>
             <% })%>
         </tbody>

     </table>

    </div>

</body>
</html>
<script>
    function copy(text) {
      var input = document.createElement('textarea');
      input.innerHTML = text;
      document.body.appendChild(input);
      input.select();
      var result = document.execCommand('copy');
      document.body.removeChild(input);
      alert("copied"+text);
      return result;
  }
      </script>